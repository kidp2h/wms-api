{
  "name": "wms-api",
  "version": "0.0.1",
  "description": "Workforce Management System API",
  "author": "nthinh.dev@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "import": {
      "schemas": [
        "./prisma/*.prisma"
      ],
      "output": "./prisma/schema.prisma"
    }
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "dotenv -e .env.local -- nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:push:local": "dotenv -e .env.local -- prisma db push",
    "prisma:migrate:local": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/bull": "^10.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.11.0",
    "@sentry/browser": "^7.106.1",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.5.0",
    "nodemailer": "^6.9.12",
    "prisma-class-generator": "^0.2.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@brakebein/prisma-generator-nestjs-dto": "^1.21.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.6",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "source-map-support": "^0.5.21",
    "swc-loader": "^0.2.6",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
